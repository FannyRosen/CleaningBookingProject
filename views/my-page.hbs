<h2 class="username"> {{username}} </h2>

 <h3>Kommande städningar</h3>

{{#each userBookings}}

  <div class="all-bookings">

    {{#if notDone}}

      <div class="upcoming-bookings">

        <p>{{formatDate date}}</p>
        <p>{{time}}</p>
        <p>{{service}}</p>
        <p>{{cleanerName}}</p>

      </div>

      <div class="delete">
        <a href="/{{_id}}/delete" class="delete-link">Avboka</a>
      </div>

    {{else}}

      <div class="finished-bookings">

        <h3>Färdiga städningar</h3>

        <p>{{date}}</p>
        <p>{{type}}</p>

        {{#if approved}}
          <p>Godkänd</p>
        {{else}}
          <p>Icke godkänd</p>
        {{/if}}

      </div>

    {{/if}}

  </div>

{{/each}}